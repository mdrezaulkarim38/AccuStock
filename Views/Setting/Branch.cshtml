@{
    ViewData["Title"] = "Branch";
}

<div class="row">
    <div class="col-md-12">
        <div class="card shadow">
            <div class="card-header">
                <h5 class="card-title">Add Branch</h5>
            </div>
            <div class="card-body">
                <form asp-action="Branch" method="post">
                    <div class="row">
                        <div class="col-mb-3">
                            <label for="BranchType" class="form-label">Branch Type</label>
                            <select class="form-select" id="BranchType" name="BranchType" required>
                                <option value="0">Select Branch Type</option>
                                <option value="1">Warehouse</option>
                                <option value="2">Sales Point</option>
                            </select>
                        </div>

                        <div class="col-mb-3">
                            <label for="Name" class="form-label">Branch Name</label>
                            <input type="text" class="form-control" id="Name" name="Name" required>
                        </div>

                        <div class="col-mb-3">
                            <label for="Address" class="form-label">Address</label>
                            <input type="text" class="form-control" id="Address" name="Address">
                        </div>

                        <div class="col-mb-3">
                            <label for="Contact" class="form-label">Contact No</label>
                            <input type="text" class="form-control" id="Contact" name="Contact">
                        </div>

                        <div class="d-flex justify-content-between">
                            <button type="submit" class="btn btn-success">
                                <i class="bi bi-check-circle"></i> Submit
                            </button>
                            <button type="reset" class="btn btn-secondary">
                                <i class="bi bi-arrow-clockwise"></i> Refresh
                            </button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
