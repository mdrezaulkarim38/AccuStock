@model AccuStock.Models.Product
@{
    ViewData["title"] = "Product Page";
}
<div class="row">
    <div class="col-md-12">
        <div class="card">
            <div class="card-header">
                <div class="card-title">Add Product</div>
            </div>
            <div class="card-body">
                <form asp-action="AddOrEditProduct" method="post" enctype="multipart/form-data">
                    <input type="hidden" asp-for="Id" />

                    <div class="row">
                        <div class="col-md-4">
                            <div class="form-group">
                                <label asp-for="Name" class="control-label"></label>
                                <input asp-for="Name" class="form-control" placeholder="Enter Product Name" />
                                <span asp-validation-for="Name" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="Description" class="control-label"></label>
                                <input asp-for="Description" class="form-control" placeholder="Enter Description" />
                                <span asp-validation-for="Description" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="Code" class="control-label"></label>
                                <input asp-for="Code" class="form-control" placeholder="Enter Code" />
                                <span asp-validation-for="Code" class="text-danger"></span>
                            </div>
                        </div>

                            <div class="form-group">
                                <label asp-for="ProductImage" class="control-label">Product Image</label>
                                <input asp-for="ProductImage" type="file" class="form-control-file" />

                                @if (!string.IsNullOrEmpty(Model.ImagePath))
                                {
                                    <div class="mt-2">
                                        <img src="@Model.ImagePath" alt="Current Logo" width="150" />
                                    </div>
                                }
                            </div>
                        </div>
                    </div>

                    <div class="text-center mt-3">
                        <button type="submit" class="btn btn-primary btn-sm px-4">
                            @(Model.Id == 0 ? "Create" : "Update")
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
@* <partial name="_ValidationScriptsPartial" /> *@
}
