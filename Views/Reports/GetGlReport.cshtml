@model IEnumerable<AccuStock.Models.ViewModels.GeneralLedger.GLedger>

@{
    ViewData["Title"] = "General Ledger Report";
    var fromDate = ViewBag.FromDate as string;
    var toDate = ViewBag.ToDate as string;
    var selectedReportType = ViewBag.ReportType as string;
}

<div class="row">
    <div class="col-md-12">
        <div class="card mb-4">
            <div class="card-header">
                <h5>Filters</h5>
            </div>
            <div class="card-body">
                <form asp-action="GetGlReport" method="post" class="row g-3">
                    <div class="col-md-2">
                        <label for="startDate" class="form-label">From Date</label>
                        <input type="date" name="startDate" class="form-control" value="@fromDate" required />
                    </div>
                    <div class="col-md-2">
                        <label for="endDate" class="form-label">To Date</label>
                        <input type="date" name="endDate" class="form-control" value="@toDate" required />
                    </div>
                    <div class="col-md-2">
                        <label for="BranchId" class="form-label">Branch</label>
                        <select class="form-select" name="branchId">
                            <option value="">All</option>
                            @if (ViewBag.Branches != null)
                            {
                                foreach (var branch in ViewBag.Branches)
                                {
                                    <option value="@branch.Id">@branch.Name</option>
                                }
                            }
                            else
                            {
                                <option disabled>No branches available</option>
                            }
                        </select>
                    </div>
                    <div class="col-md-2">
                        <label for="chartOfAccountId" class="form-label">Account</label>
                        <select class="form-select" name="chartOfAccountId">
                            <option value="">All</option>
                            @foreach (var coa in ViewBag.ChartOfAccounts)
                            {
                                <option value="@coa.Id">@coa.Name</option>
                            }
                        </select>
                    </div>
                    <div class="col-md-2">
                        <label for="reportType" class="form-label">Report Type</label>
                        <select name="reportType" class="form-select">
                            @{
                                var reportOptions = new[] { "PDF", "Excel" };
                                foreach (var option in reportOptions)
                                {
                                    var selected = option == selectedReportType ? "selected" : "";
                                    <option value="@option" selected>@option</option>
                                }
                            }
                        </select>
                    </div>
                    <div class="col-md-2 d-flex align-items-end">
                        <button type="submit" class="btn btn-primary w-100">Generate</button>
                    </div>
                </form>
            </div>
        </div>

        @if (Model != null && Model.Any())
        {
            <div class="card shadow-sm">
                <div class="card-header text-center">
                    <h6 class="text-muted mb-1">@ViewBag.CompanyName</h6>
                    <h4 class="fw-bold">General Ledger</h4>
                    <h6>From: @ViewBag.FromDate - To: @ViewBag.ToDate</h6>
                    <h6>Report Type: @ViewBag.SelectedReportType</h6>
                </div>
                <div class="card-body">
                    <table class="table table-bordered table-hover table-striped">
                        <thead class="table-primary">
                            <tr>
                                <th>Account</th>
                                <th>Debit</th>
                                <th>Credit</th>
                                <th>Balance</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var entry in Model)
                            {
                                <tr>
                                    <td>@entry.ChartOfAccountName</td>
                                    <td>@String.Format("{0:N2}", entry.TotalDebit)</td>
                                    <td>@String.Format("{0:N2}", entry.TotalCredit)</td>
                                    <td>@String.Format("{0:N2}", entry.TotalDebit - entry.TotalCredit)</td>
                                </tr>
                            }
                        </tbody>
                        <tfoot class="table-light fw-bold">
                            <tr>
                                <td colspan="1" class="text-end">Total</td>
                                <td>
                                    @String.Format("{0:N2}", Model.Sum(x => x.TotalDebit))
                                </td>
                                <td>
                                    @String.Format("{0:N2}", Model.Sum(x => x.TotalCredit))
                                </td>
                                <td>
                                    @String.Format("{0:N2}", Model.Sum(x => x.TotalDebit - x.TotalCredit))
                                </td>
                            </tr>
                        </tfoot>
                    </table>
                </div>
            </div>
        }
    </div>
</div>
