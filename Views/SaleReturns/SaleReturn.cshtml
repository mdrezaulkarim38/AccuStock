@model List<AccuStock.Models.ViewModels.SaleReturn.SaleReturnListViewModel>
@{
    ViewData["Title"] = "Sale Returns";
}

<div class="row">
    <div class="col-md-12">
        <div class="card shadow">
            <div class="card-header d-flex justify-content-between align-items-center">
                <h5 class="card-title mb-0">Sale Returns</h5>
                <a asp-action="AddSaleReturn" class="btn btn-primary btn-sm">Add New Return</a>
            </div>
            <div class="card-body">
                <table class="table table-bordered">
                    <thead>
                        <tr>
                            <th>Return No</th>
                            <th>Sale No</th>
                            <th>Customer</th>
                            <th>Return Date</th>
                            <th>Total Amount</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model != null && Model.Any())
                        {
                            foreach (var returnItem in Model)
                            {
                                <tr>
                                    <td>@returnItem.ReturnNo</td>
                                    <td>@returnItem.SaleNo</td>
                                    <td>@returnItem.CustomerName</td>
                                    <td>@returnItem.ReturnDate.ToString("dd/MM/yyyy")</td>
                                    <td>@returnItem.TotalAmount.ToString("F2")</td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="7">No sale returns found.</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            $('.select2').select2({
                placeholder: 'Choose...',
                allowClear: true,
                width: '100%'
            });
        });
    </script>
}