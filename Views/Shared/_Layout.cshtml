  <script>
    $(document).ready(function () {
      $("#basic-datatables").DataTable({});

      @if (TempData["SuccessMessage"] != null)
        {
          <text>
            toastr.success("@TempData["SuccessMessage"]");
          </text>
      }

        @if (TempData["ErrorMessage"] != null)
        {
          <text>
            toastr.error("@TempData["ErrorMessage"]");
          </text>
      }
      });
