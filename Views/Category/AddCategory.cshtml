@model AccuStock.Models.Category
@{
    ViewData["Title"] = Model?.Id == 0 ? "Add New Parent Category" : "Edit Parent Category";
}

<div class="row">
    <div class="col-md-12">
        <div class="card shadow">
            <div class="card-header">
                <h5 class="card-title mb-0">@(Model?.Id == 0 ? "Add New Parent Category" : "Edit Parent Category")</h5>
            </div>
            <div class="card-body">
                <form asp-action="CreateOrUpdateCat" method="post" id="categoryForm">
                    <input type="hidden" id="CategoryId" name="Id" value="@Model?.Id" />
                    <input type="hidden" name="ParentCategoryId" value="" /> <!-- Ensure ParentCategoryId is null -->

                    <div class="mb-3">
                        <label for="Name" class="form-label">Category Name</label>
                        <input type="text" class="form-control" id="Name" name="Name" value="@Model?.Name" required />
                    </div>
                    <div class="d-flex justify-content-start gap-2">
                        <button type="submit" class="btn btn-success btn-sm">
                            <i class="bi bi-check-circle"></i> @(Model?.Id == 0 ? "Submit" : "Update")
                        </button>
                        <a class="btn btn-secondary btn-sm" asp-action="Category" asp-controller="Category">
                            <i class="bi bi-x-circle"></i> Cancel
                        </a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        document.getElementById("categoryForm").addEventListener("submit", function (e) {
            e.preventDefault();
            var form = this;
            var formData = new FormData(form);

            fetch(form.action, {
                method: "POST",
                body: formData
            })
            .then(response => response.json())
            .then(data => {
                if (data.success) {
                    alert(data.message);
                    window.location.href = "@Url.Action("Category", "Category")";
                } else {
                    alert(data.message);
                }
            })
            .catch(error => {
                console.error("Error:", error);
                alert("An error occurred. Please try again.");
            });
        });
    </script>
}