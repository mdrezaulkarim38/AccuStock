@{
    ViewData["Title"] = "New Journal";
}

<div class="row">
    <div class="col-md-12">
        <div class="card shadow">
            <div class="card-header d-flex justify-content-between align-items-center">
                <h5 class="card-title mb-0">New Journal</h5>
            </div>
            <div class="card-body">
                <form method="post">
                    <div class="mb-3">
                        <label for="VchDate" class="form-label">Date:</label>
                        <input type="date" id="VchDate" name="VchDate" class="form-control" value="@DateTime.Now.ToString("yyyy-MM-dd")" />
                    </div>
                    <div class="mb-3">
                        <label for="RefNo" class="form-label">Reference:</label>
                        <input type="text" id="RefNo" name="RefNo" class="form-control" placeholder="Enter Reference No" />
                    </div>
                    <div class="mb-3">
                        <label for="Notes" class="form-label">Notes:</label>
                        <input type="text" id="Notes" name="Notes" class="form-control" placeholder="Enter Notes" />
                    </div>
                    <div class="mb-3">
                        <label for="JournalType" class="form-label">Journal Type:</label>
                        <select id="JournalType" class="form-select" name="JournalType">
                            <option value="" selected>Select Journal Type</option>
                            <option value="CV">CV</option>
                            <option value="JV">JV</option>
                        </select>
                    </div>

                    <table class="table table-bordered table-striped">
                        <thead class="table-primary">
                            <tr>
                                <th>Head Of Account</th>
                                <th>Description</th>
                                <th>Debit</th>
                                <th>Credit</th>
                                <th>Action</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td><input type="text" name="headOfAccount" id="headOfAccount" class="form-control" /></td>
                                <td><input type="text" name="Description" id="Description" class="form-control" /></td>
                                <td><input type="number" name="Debit" id="Debit" class="form-control" /></td>
                                <td><input type="number" name="Credit" id="Credit" class="form-control" /></td>
                                <td><button type="button" class="btn btn-danger btn-sm">X</button></td>
                            </tr>
                            <tr>
                                <td><input type="text" name="headOfAccount" id="headOfAccount" class="form-control" /></td>
                                <td><input type="text" name="Description" id="Description" class="form-control" /></td>
                                <td><input type="number" name="Debit" id="Debit" class="form-control" /></td>
                                <td><input type="number" name="Credit" id="Credit" class="form-control" /></td>
                                <td><button type="button" class="btn btn-danger btn-sm">X</button></td>
                            </tr>
                        </tbody>
                        <tfoot>
                            <tr>
                                <td colspan="5" class="">
                                    <button type="button" class="btn btn-success btn-sm">Add New Row</button>
                                </td>
                            </tr>
                            <tr>
                                <td colspan="4" class="text-end"><strong>Total:</strong></td>
                                <td><span>0.00</span></td>
                            </tr>
                            <tr>
                                <td colspan="4" class="text-end"><strong>Difference:</strong></td>
                                <td><span>0.00</span></td>
                            </tr>
                        </tfoot>
                    </table>

                    <div class="mt-4">
                        <button type="submit" class="btn btn-primary btn-sm">Submit</button>
                        <a href="@Url.Action("JournalList", "Journal")" class="btn btn-secondary btn-sm">Cancel</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<style>
.table>:not(:first-child) {
    border-top: none;!important
}
</style>