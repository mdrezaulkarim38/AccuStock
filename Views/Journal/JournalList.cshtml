@model IEnumerable<AccuStock.Models.JournalPost>

@{
    ViewData["Title"] = "Journal List";
}

<div class="row">
    <div class="col-md-12">
        <div class="card shadow">
            <div class="card-header d-flex justify-content-between align-items-center">
                <h5 class="card-title mb-0">Journal List</h5>
                <a class="btn btn-primary btn-sm" asp-controller="Journal" asp-action="AddJournal">
                    <i class="fas fa-solid fa-plus"></i> Add New
                </a>
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table  datanew">
                        <thead class="table-primary">
                        <tr>
                            <th>SL No.</th>
                            <th>Date</th>
                            <th>Journal No</th>
                            <th>Reference Number</th>
                            <th>Notes</th>
                            <th>Amount</th>
                            <th>Action</th>
                        </tr>
                        </thead>
                        <tbody>
                        @{
                            int index = 0;
                        }
                        @foreach (var journal in Model)
                        {
                            index++;
                            <tr>
                                <td>@index</td>
                                <td>@journal.VchDate</td>
                                <td>@journal.VchNo</td>
                                <td>@journal.RefNo</td>
                                <td>@journal.Notes</td>
                                <td>@journal.Debit</td>
                                @*  <td>
                                        <!-- Form to toggle status -->
                                        <form method="post" action="@Url.Action("ToggleUserStatus", "User")">
                                            <input type="hidden" name="userId" value="@user.Id" />
                                            <button type="submit" class="btn @(user.Status ? "btn-success" : "btn-danger") btn-sm">
                                                @if (user.Status)
                                                {
                                                    <i class="fas fa-user-check"></i> <span>Active</span>
                                                }
                                                else
                                                {
                                                    <i class="fas fa-user-alt-slash"></i> <span>Inactive</span>
                                                }
                                            </button>
                                        </form>
                                    </td> *@
                                <td>
                                    <button class="btn btn-warning btn-sm"
                                            onclick="editJournal('@journal.Id', '@journal.VchDate', '@journal.VchNo', '@journal.RefNo', '@journal.Notes', '@journal.Notes', '@journal.Debit')"
                                            data-bs-toggle="modal" data-bs-target="#addJournalModal">
                                        <i class="fas fa-edit"></i> Edit
                                    </button>

                                    <button class="btn btn-danger btn-sm" id="alert_demo_3_2">
                                        <i class="fas fa-trash-alt"></i> Reset Password
                                    </button>
                                </td>
                            </tr>
                        }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>