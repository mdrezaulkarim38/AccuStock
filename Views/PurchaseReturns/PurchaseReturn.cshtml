@model List<AccuStock.Models.ViewModels.PurchaseReturn.PurchaseReturnListViewModel>
@{
    ViewData["Title"] = "Purchase Returns";
}

<div class="row">
    <div class="col-md-12">
        <div class="card shadow">
            <div class="card-header d-flex justify-content-between align-items-center">
                <h5 class="card-title mb-0">Purchase Returns</h5>
                <a asp-action="AddPurchaseReturn" class="btn btn-primary btn-sm">Add New Return</a>
            </div>
            <div class="card-body">
                @if (TempData["SuccessMessage"] != null)
                {
                    <div class="alert alert-success">@TempData["SuccessMessage"]</div>
                }
                @if (TempData["ErrorMessage"] != null)
                {
                    <div class="alert alert-danger">@TempData["ErrorMessage"]</div>
                }
                <table class="table table-bordered">
                    <thead>
                        <tr>
                            <th>Return No</th>
                            <th>Purchase No</th>
                            <th>Vendor</th>
                            <th>Return Date</th>
                            <th>Total Amount</th>
                            <th>Status</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model != null && Model.Any())
                        {
                            foreach (var returnItem in Model)
                            {
                                <tr>
                                    <td>@returnItem.ReturnNo</td>
                                    <td>@returnItem.PurchaseNo</td>
                                    <td>@returnItem.VendorName</td>
                                    <td>@returnItem.ReturnDate.ToString("dd/MM/yyyy")</td>
                                    <td>@returnItem.TotalAmount.ToString("F2")</td>
                                    <td>@returnItem.Status</td>
                                    <td>
                                        <a asp-action="ViewPurchaseReturn" asp-route-id="@returnItem.Id" class="btn btn-info btn-sm">View</a>
                                    </td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="7">No purchase returns found.</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<div>

</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            $('.select2').select2({
                placeholder: 'Choose...',
                allowClear: true,
                width: '100%'
            });
        });
    </script>
}